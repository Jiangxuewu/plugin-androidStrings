<idea-plugin>
    <id>com.geminicli.exportandroidstrings</id>
    <name>Export Android Strings</name>
    <version>1.0.0.002</version>
    <vendor email="support@geminicli.com" url="https://www.geminicli.com">Gemini-cli</vendor>

    <description><![CDATA[
        This plugin helps to export all string resources from an Android project across all languages.
        It provides a simple UI to select an export directory and initiate the export process.
    ]]></description>

    <change-notes><![CDATA[
        Initial release.
    ]]></change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <idea-version since-build="212" until-build="252.*"/>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="ExportAndroidStrings.ExportAction"
                class="com.geminicli.exportandroidstrings.ExportStringsAction"
                text="Export Android Strings..."
                description="Export all string resources from the current Android project."
                icon="/icons/pluginIcon.svg"> <!-- Placeholder for an icon -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>